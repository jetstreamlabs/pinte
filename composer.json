{
  "name": "jetstreamlabs/pinte",
  "description": "A less opinionated code formatter for PHP, based on Laravel Pint.",
  "keywords": [
    "php",
    "format",
    "formatter",
    "lint",
    "linter"
  ],
  "homepage": "https://github.com/jetstreamlabs/pinte",
  "type": "project",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/jetstreamlabs/pinte/issues",
    "source": "https://github.com/jetstreamlabs/pinte"
  },
  "authors": [
    {
      "name": "Nuno Maduro",
      "email": "enunomaduro@gmail.com"
    },
    {
      "name": "secondman",
      "email": "secondman@jetstreamlabs.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-tokenizer": "*",
    "ext-xml": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.19",
    "illuminate/view": "^10.13",
    "laravel-zero/framework": "^10.1",
    "mockery/mockery": "^1.6",
    "nunomaduro/larastan": "^2.6",
    "nunomaduro/termwind": "^1.15",
    "pestphp/pest": "^2.8",
    "tightenco/duster": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Scripts\\": "scripts/",
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.14"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "bin": [
    "builds/pinte"
  ]
}
